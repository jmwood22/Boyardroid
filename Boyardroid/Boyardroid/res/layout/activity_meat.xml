                android:gravity="center" >

                <CheckBox
                    android:id="@+id/lobster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
